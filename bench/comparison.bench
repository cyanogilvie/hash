	bench comparison-4.1 {Throughput test (1MB)} -batch 1 -setup { #<<<
		set data	[string repeat a 1048576]
	} -compare {
		md5			{::hash::md5 $data}
		sha256		{::hash::sha256 $data}
		sha384		{::hash::sha384 $data}
